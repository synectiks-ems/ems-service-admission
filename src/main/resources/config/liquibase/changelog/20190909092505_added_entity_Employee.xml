            <column name="secondary_address" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="employee_address" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="personal_mail_id" type="varchar(255)">
